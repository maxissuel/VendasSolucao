<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                

                <TextView
                    android:id="@+id/txtcd_pedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_weight="0.5"
                                        
                    android:text="" />

                <Button
                    android:id="@+id/btdt_lancamento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0.5"
                    android:onClick="selecionarDataLancamento"
                    android:text="00/00/0000" />
            </TableRow>
        </LinearLayout>
    </ScrollView>

     <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    
    <EditText
            android:id="@+id/txtcd_cli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                        
             />
    
    <Button
        android:id="@+id/btcd_cli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="consultaCliente"
        android:text="Cliente" />
</TableRow>

     
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Observações: " />
        
    <EditText
     android:id="@+id/txtds_obs"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:text="" />
   
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        
        
    </TableRow>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forma de Pagamento " />

    <Spinner
        android:id="@+id/spnds_formapgto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Código da Tabela Preço: " />
    <EditText
            android:id="@+id/edtcd_tabelapreco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>
        </TableRow>
         <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        </TableRow>
        
        
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Pedido: " />
        
        <TextView
            android:id="@+id/txttt_pedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0,00" 
            android:textStyle="bold"/>

        

    </TableRow>

    <Button
        android:id="@+id/btsalvapedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar" 
        android:onClick="salvaPedido"/>

</LinearLayout>